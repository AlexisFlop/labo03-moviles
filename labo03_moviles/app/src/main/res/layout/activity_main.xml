<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/money_amount_textView"
        style="@style/TextAppearance.MaterialComponents.Headline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_gap"
        android:layout_marginTop="@dimen/medium_gap"
        android:layout_marginEnd="@dimen/small_gap"
        android:text="@string/money_amount_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/count_textView"
        style="@style/TextAppearance.MaterialComponents.Headline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_gap"
        android:text="@string/count_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/money_amount_textView" />

    <ImageView
        android:id="@+id/five_cents_image_view"
        android:layout_width="@dimen/image_dimen"
        android:layout_height="@dimen/image_dimen"
        app:layout_constraintEnd_toStartOf="@+id/ten_cents_image_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ten_cents_image_view"
        app:srcCompat="@drawable/five_cents" />

    <ImageView
        android:id="@+id/ten_cents_image_view"
        android:layout_width="@dimen/image_dimen"
        android:layout_height="@dimen/image_dimen"
        android:layout_marginTop="@dimen/large_gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/five_cents_image_view"
        app:layout_constraintTop_toBottomOf="@+id/count_textView"
        app:srcCompat="@drawable/ten_cents" />

    <TextView
        android:id="@+id/ten_cents_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_gap"
        android:text="@string/ten_cents_text"
        app:layout_constraintEnd_toEndOf="@+id/ten_cents_image_view"
        app:layout_constraintStart_toStartOf="@+id/ten_cents_image_view"
        app:layout_constraintTop_toBottomOf="@+id/ten_cents_image_view" />

    <TextView
        android:id="@+id/five_cents_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/five_cents_text"
        app:layout_constraintEnd_toEndOf="@+id/five_cents_image_view"
        app:layout_constraintStart_toStartOf="@+id/five_cents_image_view"
        app:layout_constraintTop_toTopOf="@+id/ten_cents_text_view" />

    <ImageView
        android:id="@+id/twenty_five_image_view"
        android:layout_width="@dimen/image_dimen"
        android:layout_height="@dimen/image_dimen"
        app:layout_constraintEnd_toStartOf="@+id/one_dollar_image_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/one_dollar_image_view"
        app:srcCompat="@drawable/quarter" />

    <ImageView
        android:id="@+id/one_dollar_image_view"
        android:layout_width="@dimen/image_dimen"
        android:layout_height="@dimen/image_dimen"
        android:layout_marginTop="@dimen/large_gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/twenty_five_image_view"
        app:layout_constraintTop_toBottomOf="@+id/five_cents_text_view"
        app:srcCompat="@drawable/one_dollar" />

    <TextView
        android:id="@+id/twentyfive_cents_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/twenty_five_cents_text"
        app:layout_constraintEnd_toEndOf="@+id/twenty_five_image_view"
        app:layout_constraintStart_toStartOf="@+id/twenty_five_image_view"
        app:layout_constraintTop_toTopOf="@+id/one_collar_text_view" />

    <TextView
        android:id="@+id/one_collar_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_gap"
        android:text="@string/one_dollar_text"
        app:layout_constraintEnd_toEndOf="@+id/one_dollar_image_view"
        app:layout_constraintStart_toStartOf="@+id/one_dollar_image_view"
        app:layout_constraintTop_toBottomOf="@+id/one_dollar_image_view" />


</androidx.constraintlayout.widget.ConstraintLayout>